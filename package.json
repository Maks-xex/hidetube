{
  "name": "chrome-react-extension",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@craco/craco": "^7.1.0",
    "@fortawesome/fontawesome-svg-core": "^6.7.2",
    "@fortawesome/free-solid-svg-icons": "^6.7.2",
    "@fortawesome/react-fontawesome": "^0.2.2",
    "@testing-library/react": "^13.4.0",
    "@types/chrome": "^0.0.228",
    "@types/node": "^16.18.23",
    "@types/react": "^18.0.33",
    "@types/react-dom": "^18.0.11",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1",
    "typescript": "^4.9.5"
  },
  "scripts": {
    "build:firefox": "web-ext build --overwrite-dest --source-dir ./build --artifacts-dir ./web-ext-artifacts",
    "start": "react-script start",
    "build": "set INLINE_RUNTIME_CHUNK=false&&craco build",
    "lint:check": "eslint src/**/*.{ts,tsx}",
    "format:check": "prettier --check src/**/*.{ts,tsx,scss,css}",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "prepare": "husky install"
  },
  "husky": {
    "hooks": {
      "pre-commit": [
        "precommit-msg",
        "lint",
        "test:nowatch"
      ]
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --check",
      "eslint"
    ],
    "*.{scss,css}": [
      "prettier --check"
    ],
    "*.{json,md}": "prettier --check"
  },
  "eslintConfig": {
    "extends": [
      "react-app"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.3",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-unused-imports": "^4.1.4",
    "husky": "^8.0.0",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2",
    "web-ext": "^8.3.0"
  }
}
