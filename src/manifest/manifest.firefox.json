{
  "short_name": "HT",
  "name": "HideTube",
  "description": "extension to toggle YouTube UI overlays",
  "manifest_version": 3,
  "version": "1.0",
  "action": {
    "default_popup": "index.html",
    "default_title": "Control overlays on YouTube videos"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*", "*://*.youtube-nocookie.com/*"],
      "js": ["static/js/content.js"],
      "all_frames": true,
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["static/js/content.js"],
      "matches": ["*://*.youtube.com/*", "*://*.youtube-nocookie.com/*"]
    }
  ],
  "background": {
    "scripts": ["static/js/background.js"],
    "type": "module"
  },
  "host_permissions": ["*://*.youtube.com/*", "*://*.youtube-nocookie.com/*"],
  "permissions": ["storage", "activeTab", "tabs", "scripting", "webNavigation"],
  "browser_specific_settings": {
    "gecko": {
      "id": "hidetube@yourdomain.com"
    }
  }
}
